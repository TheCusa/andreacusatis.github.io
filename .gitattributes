#############################################
#       GENERAL SETTINGS
#############################################

# Normalize line endings for all text files
* text=auto

# Increase merge success for C# scripts
*.cs diff=csharp

# Default: lockable binary assets (optional for teams using Git LFS locking)
[attr]lock filter=lfs diff=lfs merge=binary -text lockable
[attr]lockonly lockable
[attr]lfs filter=lfs diff=lfs merge=binary -text
[attr]lfstext filter=lfs diff=lfstext merge=lfstext -text


#############################################
#       UNITY YAML FILES
#############################################

# Macro attribute for Unity YAML-formatted files
[attr]unity-yaml-file -text merge=unityyamlmerge linguist-generated

# YAML-based Unity files
*.asmdef unity-yaml-file -linguist-generated
*.anim unity-yaml-file
*.asset unity-yaml-file
*.brush unity-yaml-file
*.controller unity-yaml-file
*.flare unity-yaml-file
*.fontsettings unity-yaml-file
*.giparams unity-yaml-file
*.guiskin unity-yaml-file
*.mask unity-yaml-file
*.mat unity-yaml-file
*.meta unity-yaml-file
*.mixer unity-yaml-file
*.overrideController unity-yaml-file
*.physicMaterial unity-yaml-file
*.physicsMaterial2D unity-yaml-file
*.playable unity-yaml-file
*.prefab unity-yaml-file
*.preset unity-yaml-file
*.renderTexture unity-yaml-file
*.shadervariants unity-yaml-file
*.spriteatlas unity-yaml-file
*.terrainlayer unity-yaml-file
*.unity unity-yaml-file


#############################################
#       UNITY BINARY ASSETS
#############################################

*.bundle filter=lfs diff=lfs merge=lfs -text
*.cubemap filter=lfs diff=lfs merge=lfs -text
*.unitypackage filter=lfs diff=lfs merge=lfs -text
*-[Nn]av[Mm]esh.asset filter=lfs diff=lfs merge=lfs -text
*-[Tt]errain.asset filter=lfs diff=lfs merge=lfs -text
*LightingData.asset filter=lfs diff=lfs merge=lfs -text
*OcclusionCullingData.asset filter=lfs diff=lfs merge=lfs -text


#############################################
#       UNREAL ENGINE
#############################################

# Unreal Engine assets (lock to avoid merge conflicts)
*.uasset lock
*.umap lock

# Localization
*.locres filter=lfs diff=lfs merge=lfs -text
*.locmeta filter=lfs diff=lfs merge=lfs -text


